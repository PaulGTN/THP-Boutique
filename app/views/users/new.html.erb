<h1>Sign up</h1>

<div class="container">

  <%= form_for @user do |users| %>
    <div class="form-group">
      <label>Email</label>
      <%= users.text_field :email, class: 'form-control', placeholder: 'Your email address' %>
    </div>
      
    <div class="form-group">
      <label>Password</label>
      <%= users.password_field 'password', class: 'form-control', placeholder: 'Your password' %>
    </div>

    <div class="form-group">
      <button type="submit">Sign up</button>
    </div>

  <% end %>

</div>
